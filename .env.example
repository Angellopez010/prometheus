# Prometheus MCP Server Configuration
# Copy this file to .env and modify as needed

# Logging Configuration
PROMETHEUS_LOG_LEVEL=INFO
PROMETHEUS_LOG_FORMAT=json

# Processing Limits
PROMETHEUS_MAX_FILE_SIZE_MB=500
PROMETHEUS_MAX_PAGES_PER_CHUNK=200
PROMETHEUS_MAX_TOKEN_LIMIT=32000

# Performance Settings
PROMETHEUS_MEMORY_OPT=true
PROMETHEUS_TIMEOUT=300

# Output Settings
# PROMETHEUS_OUTPUT_DIR=/path/to/output
PROMETHEUS_CLEAN_TEMP=true